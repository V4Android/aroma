###################################################################################################################

ini_set("rom_name",             "V4Android");
ini_set("rom_version",          "1.0");
ini_set("rom_author",           "MarcoMarinho, rootSU, FlyinGrub, AndrasLOHF");
ini_set("rom_device",           "Google Nexus 5");
ini_set("rom_date",             "March 29th, 2014");

fontresload( "0", "ttf/DroidSans.ttf", "12" );
fontresload( "1", "ttf/DroidSans.ttf", "18" );

###################################################################################################################
# SHOW ROM INFORMATION

viewbox(
    "Welcome!",
    "\n\n\n\n\n\n\n\nYou are about to flash:\n\n\n"+
    "<b><#selectbg_g>"+ini_get("rom_name")+"</#></b>\n"+
    "by <b>"+ini_get("rom_author")+"</b>\n\n"+
    "VERSION:\t <b><#selectbg_g>"+ini_get("rom_version")+"</#></b>\n"+
    "DEVICE:\t\t <b><#selectbg_g>"+ini_get("rom_device")+"</#></b>\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n"+
    "Press <b>Next</b> to continue the installation",
    "@common"
);

###################################################################################################################
# TERMS OF USE

agreebox(
    "Important Notice",
    "Please carefully read the Terms of Use!",
    "@agreement",
    resread("read_me.txt"),
    "I agree with these Terms of Use",
    "You must to agree with the Terms of Use to continue"
);

###################################################################################################################
# CREDITS

viewbox(
    "Additional Credits",
    resread("credits.txt"),
    "@info"
);

###################################################################################################################
# SELECT DRIVERS

selectbox(
  "Drivers",
  "Select the one you want to install:",
  "@apps",
  "drivers.prop",

  "NEON_SQ JB","Super Quality driver (4.1.1+)",0,
  "NEON_HQ JB","High Quality driver (4.1.1+)",0,
  "NEON JB","Power Save driver (4.1.1+)",0,
  "NEON_SQ ICS","Super Quality driver (4.0.3+)",0,
  "NEON_HQ ICS","High Quality driver (4.0.3+)",0,
  "NEON ICS","Power Save driver (4.0.3+)",0,

);

###################################################################################################################
# INSTALLING

ini_set("text_next", "Install now");
viewbox(
    "Ready to install",
    "You are now ready to begin installation.\n\n"+
    "Press <b>Install now</b> to start.\n\n"+
    "If you want to review or change any of your installation settings, press <b>Back</b>.",
    "@install"
);

ini_set("text_next", "Next");
install(
  "Installing",
  "Flashing <b>"+ini_get("rom_name")+"</b>...\n"+
  "Please Wait...",
  "@install",
  "Done! Press <b>Next</b> button"
);

ini_set("text_next", "Finish");
viewbox(
    "Installation was successful!",
    "<b>Thank you for trying our script!</b>\n\n"+
    "<#selectbg_g><b>If you like please leave a feedback!</b></#>\n\n",
    "@welcome"
);

